<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_welcome"
        android:textColor="@color/welcomeText"
        android:padding="1dp"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_button_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_welcome"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/buttons"
        android:text="@string/button_login_user"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/login_button_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/login_button_user"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/buttons"
        android:text="@string/button_login_pharma"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />


</RelativeLayout>